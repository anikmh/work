conky.config = {
	update_interval = 1,
	cpu_avg_samples = 2,
	net_avg_samples = 2,
	out_to_console = false,
	override_utf8_locale = true,
	double_buffer = true,
	no_buffers = true,
	text_buffer_size = 32768,
	imlib_cache_size = 0,
	own_window = true,
	own_window_type = 'desktop',
	own_window_transparent = true,
	own_window_argb_visual = true,
	own_window_argb_value = 50,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	border_inner_margin = 5,
	border_outer_margin = 0,
	xinerama_head = 1,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,
	use_xft = true,
	font = 'Ubuntu Mono:size=12',
    font2 = 'Consolas:bold:size=10',
    font3 = 'Consolas:normal:size=8',
	xftalpha = 0.8,
	uppercase = false,
	default_color = 'gray',
	own_window_colour = '#000000',
	minimum_width = 300, minimum_height = 0,
	alignment = 'top_right',
};

conky.text = [

${voffset -16} ${font Consolas:bold:size=18} ${alignc} ${time %r} ${font}
${voffset 4} ${alignc} ${time %A %B %d, %Y}
${font} ${voffset -4}
${font2}SYSTEM ${hr 0.5}
${font3}$sysname $kernel $alignr $machine
Host: $alignr $nodename
Uptime: $alignr $uptime
Processes: $alignr ${execi 1000 ps aux | wc -l}
Load: $alignr $loadavg

${font2}CPU ${hr 0.5}
${font3}${execi 1000 grep model /proc/cpuinfo | cut -d : -f2 | tail -1 | sed 's/\s//'}
Overall Usage: $cpu% ${cpubar}
CPU1: ${cpu cpu1}% $alignr ${freq (1)} MHz $alignr ${cpubar cpu1 6,120}
CPU2: ${cpu cpu2}% $alignr ${freq (2)} MHz $alignr ${cpubar cpu2 6,120}
CPU3: ${cpu cpu3}% $alignr ${freq (3)} MHz $alignr ${cpubar cpu3 6,120}
CPU4: ${cpu cpu4}% $alignr ${freq (4)} MHz $alignr ${cpubar cpu4 6,120}
CPU5: ${cpu cpu5}% $alignr ${freq (5)} MHz $alignr ${cpubar cpu5 6,120}
CPU6: ${cpu cpu6}% $alignr ${freq (6)} MHz $alignr ${cpubar cpu6 6,120}
CPU7: ${cpu cpu7}% $alignr ${freq (7)} MHz $alignr ${cpubar cpu7 6,120}
CPU8: ${cpu cpu8}% $alignr ${freq (8)} MHz $alignr ${cpubar cpu8 6,120}
CPU9: ${cpu cpu9}% $alignr ${freq (9)} MHz $alignr ${cpubar cpu9 6,120}
CPU10: ${cpu cpu10}% $alignr ${freq (10)} MHz $alignr ${cpubar cpu10 6,120}
CPU11: ${cpu cpu11}% $alignr ${freq (11)} MHz $alignr ${cpubar cpu11 6,120}
CPU12: ${cpu cpu12}% $alignr ${freq (12)} MHz $alignr ${cpubar cpu12 6,120}

${font2}GPU ${hr 0.5}
${font3}${exec nvidia-smi --query-gpu=gpu_name --format=csv,noheader,nounits}
${font3}Usage: ${exec nvidia-smi | grep % | cut -c 61-63} %
${font3}VRAM: ${exec nvidia-smi | grep % | cut -c 37-40} MB
${font3}Power: ${exec nvidia-smi | grep % | cut -c 21-23} W
${font3}Temperature: ${execi 60 nvidia-settings -query [gpu:0]/GPUCoreTemp -t} Â°C

${font2}MEMORY ${hr 0.5}
${font3}RAM $alignc $mem / $memmax $alignr $memperc%
${membar 4}
Swap $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar 4}

${font2}DISK ${hr 0.5}
${font3}File System: $alignr${fs_type}
${font3}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar 4/}

${font2}NETWORK ${hr 0.5}
${font3}Local IPs:${alignr}External IP:
${execi 1000 ip a | grep inet | grep -vw lo | grep -v inet6 | cut -d \/ -f1 | sed 's/[^0-9\.]*//g'}  ${alignr}${execi 1000  wget -q -O- http://ipecho.net/plain; echo}
${font3}Down: ${downspeed enx00e04c724755}  ${alignr}Up: ${upspeed enx00e04c724755} 

${font2}TOP PROCESSES ${hr 0.5}
${font3}Name $alignr PID   CPU%   MEM%${font3}
${top name 1} $alignr ${top pid 1} ${top cpu 1}% ${top mem 1}%
${top name 2} $alignr ${top pid 2} ${top cpu 2}% ${top mem 2}%
${top name 3} $alignr ${top pid 3} ${top cpu 3}% ${top mem 3}%
${top name 4} $alignr ${top pid 4} ${top cpu 4}% ${top mem 4}%
${top name 5} $alignr ${top pid 5} ${top cpu 5}% ${top mem 5}%
${top name 6} $alignr ${top pid 6} ${top cpu 6}% ${top mem 6}%
${top name 7} $alignr ${top pid 7} ${top cpu 7}% ${top mem 7}%
${top name 8} $alignr ${top pid 8} ${top cpu 8}% ${top mem 8}%
${top name 9} $alignr ${top pid 9} ${top cpu 9}% ${top mem 9}%
${top name 10} $alignr ${top pid 10} ${top cpu 10}% ${top mem 10}%
]];